<!--modal đăng ký tài khoản -->
<div class="modal fade" id="modalRegister" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
aria-hidden="true">
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header text-center">
      <h4 class="modal-title w-100 font-weight-bold">Đăng ký tài khoản</h4>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body mx-10">
      <div class="container h-100">
        <div class="d-flex justify-content-center h-100">
          <div class="user_card">
            <div class="d-flex justify-content-center">
              <div class="brand_logo_container">
                <img src="/images/logo.png" class="brand_logo" alt="Logo">
              </div>
            </div>

            <div class="container">
              <div class="form-group row">
                <label for="exampleFormControlInput1">Tài khoản</label>
                <input type="text" class="form-control" id="r_username" placeholder="Tài khoản">
              </div>
              <div class="form-group row">
                <label for="exampleFormControlInput1">Mật khẩu</label>
                <input type="password" class="form-control" id="r_password" placeholder="Mật khẩu">
              </div>
              <div class="form-group row">
                <label for="exampleFormControlInput1">Xác nhận mật khẩu</label>
                <input type="password" class="form-control" id="r_confirm_password" placeholder="Xác nhận mật khẩu">
              </div>

              <div class="form-group row">
                <label for="exampleFormControlInput1">Họ và tên</label>
                <input type="text" class="form-control" id="r_fullname" placeholder="Họ và tên">
              </div>
            </div>

            <div class="col-md-12">
              <label class="text-danger" id="r_message"></label>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer d-flex justify-content-center">
      <button type="button" name="button" class="btn btn-secondary" id="r_btnLogin">Đăng nhập</button>
      <button type="button" name="button" class="btn btn-success" id="r_btnRegister">Xác nhận đăng ký</button>
    </div>
  </div>
</div>
</div>
