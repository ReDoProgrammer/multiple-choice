<div class="modal fade" id="modalLogin" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
aria-hidden="true">
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header text-center">
      <h4 class="modal-title w-100 font-weight-bold">Đăng nhập hệ thống thi trắc nghiệm</h4>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body mx-3">
      <div class="container h-100">
        <div class="d-flex justify-content-center h-100">
          <div class="user_card">
            <div class="d-flex justify-content-center">
              <div class="brand_logo_container">
                <img src="/images/logo.png" class="brand_logo" alt="Logo">
              </div>
            </div>

            <div class="d-flex justify-content-center form_container mt-4">
              <form>
                <div class="input-group mb-3">
                  <div class="input-group-append">
                    <span class="input-group-text"><i class="fas fa-user text-info"></i></span>
                  </div>
                  <input type="text" id="username" class="form-control" value="" placeholder="Tài khoản">
                </div>
                <div class="input-group mb-2">
                  <div class="input-group-append">
                    <span class="input-group-text"><i class="fas fa-key text-danger"></i></span>
                  </div>
                  <input type="password" id="password" class="form-control" value="" placeholder="Mật khẩu">
                </div>
                <div class="form-group">
                  <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="customControlInline">
                    <label class="custom-control-label" for="customControlInline">Nhớ tài khoản</label>
                  </div>
                </div>
                <div class="d-flex justify-content-center mt-4 login_container">
                  <button type="button" name="button" class="btn btn-success" id="btnLogin">Đăng nhập</button>&nbsp;&nbsp;
                  <button type="button" name="button" class="btn btn-secondary" id="btnRegister">Đăng ký tài khoản</button>
                </div>
              </form>
            </div>
            <div class="col-md-12">
              <label class="text-danger" id="message"></label>
            </div>
          </div>
        </div>
      </div>
    </div>
