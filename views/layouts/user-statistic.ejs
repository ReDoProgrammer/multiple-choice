<div class="tab-pane" id="user-statistic">

</div>

<script type="text/javascript">
/*
biến toàn cục
*/





  $(document).ready(function(){
    let statistics = '';
    $.ajax({
      url:'/statistic/profile',
      type:'get',
      success:function(data){
        if(data.code == 200){
          $.each(data.statistics,function(k,g){
            if(g.subjects.length > 0){
                statistics +=  '<div class="panel panel-primary" style="margin-bottom:2px;">';
                  statistics +=  '<div class="panel-heading">';
                      statistics +=    '<h4 class="panel-title">'+g.name+'</h4>';
                  statistics +=  '</div>';
                  statistics +=  '<div class="panel-body" style="padding-top:2px; padding-bottom:2px; ">';
                  $.each(g.subjects,function(j,s){
                    if(s.statistics.length > 0){
                      statistics += '<h4 class="text-success"><span><i class="fa fa-desktop text-danger" aria-hidden="true"></i></span> '+s.name+'</h4>';
                      $.each(s.statistics,function(l,st){
                        statistics += '<h5 style="padding-left:10px"> <span> <i class="fa fa-hand-o-right text-info" aria-hidden="true"></i></span> Số lần thi:<span class="text-warning"> '+st.times+'</span> lần</h5>';
                        statistics += '<h5 style="padding-left:10px"> <span> <i class="fa fa-hand-o-right text-info" aria-hidden="true"></i></span> Đúng 100%:<span class="text-warning"> '+st.equals_100+'</span> lần</h5>';
                        statistics += '<h5 style="padding-left:10px"> <span> <i class="fa fa-hand-o-right text-info" aria-hidden="true"></i></span> Trên 90%:<span class="text-warning"> '+st.uper_90+'</span> lần</h5>';
                        statistics += '<h5 style="padding-left:10px"> <span> <i class="fa fa-hand-o-right text-info" aria-hidden="true"></i></span> Trên 80%:<span class="text-warning"> '+st.uper_80+'</span> lần</h5>';
                        statistics += '<h5 style="padding-left:10px"> <span> <i class="fa fa-hand-o-right text-info" aria-hidden="true"></i></span> Trên 70%:<span class="text-warning"> '+st.uper_70+'</span> lần</h5>';
                        statistics += '<h5 style="padding-left:10px"> <span> <i class="fa fa-hand-o-right text-info" aria-hidden="true"></i></span> Trên 50%:<span class="text-warning"> '+st.uper_50+'</span> lần</h5>';
                        statistics += '<h5 style="padding-left:10px"> <span> <i class="fa fa-hand-o-right text-info" aria-hidden="true"></i></span> Trên 30%:<span class="text-warning"> '+st.uper_30+'</span> lần</h5>';
                        statistics += '<h5 style="padding-left:10px"> <span> <i class="fa fa-hand-o-right text-info" aria-hidden="true"></i></span> Dưới 30%:<span class="text-warning"> '+st.lower_30+'</span> lần</h5>';
                      });
                    }
                  });
                  statistics += '</div>';
                statistics += '</div>';
            }

          });
          $('#user-statistic').html(statistics);
        }
      }
    });
  });

</script>
